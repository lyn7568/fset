  position: relative;    
  font-size: 32rpx;    
  padding: 20rpx 0 30rpx 30rpx;    
}    
    
.page_tab_content button {    
  width: 280rpx;    
  background: #fb9817;    
  color: #fff;    
  position: relative;    
  right: 120rpx;    
  top: 150rpx;    
  height: 60rpx;    
  line-height: 60rpx;    
}    
    
.page_tab_content image {    
  display: inline-block;    
  height: 40rpx;    
  width: 40rpx;    
