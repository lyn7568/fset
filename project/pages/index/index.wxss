}    
.user-info{
  margin: 80rpx 80rpx 80rpx 106rpx;
} 
.user_head {    
  width: 160rpx;    
  height: 160rpx;    
  border-radius: 50%;
  font-size:160rpx;
}

.line{
  width:45%;
  margin:30rpx 20rpx;
  border:2rpx dashed #e5e5e5;
}
.log-out{
  color:#E64340;
}
.page-section-gap{
  box-sizing: border-box;
}

.page-body-button {
  margin-bottom: 30rpx;
}

.navigator-box {
  opacity: 0;
  position: relative;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 32rpx;

  transform: translateY(-50%);
  transition: .3s;
}
.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:after {
  content: " ";
  position: absolute;
  left: 30rpx;
  bottom: 0;
  right: 30rpx;
  height: 1px;
  border-bottom: 1rpx solid #D8D8D8;
  color: #D8D8D8;
}
/* .navigator:first-child:before {
  display: none;
} */
.navigator-text {
  flex: 1;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}