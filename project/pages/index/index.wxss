/* 主页 */    
.home {    
  position: absolute;    
  width: 750rpx;    
  height: 100%;    
  background-color: white;    
  z-index: 1;    
  transition: All 0.4s ease;    
  -webkit-transition: All 0.4s ease;    
}    
.home .icon_user {    
  width: 68rpx;    
  height: 68rpx;    
  margin-left: 20rpx;    
  margin-top: 20rpx;    
}  
.banner{
  width:100%;
  height:300px
}   
/* 遮罩层 */    
.bg {      
  display: none;      
  position: fixed;      
  top: 0%;      
  left: 50%;      
  width: 100%;      
  height: 100%;      
  background-color: black;      
  z-index: 1001;      
  -moz-opacity: 0.7;      
  opacity: 0.70;      
  transition:width 2s;    
  filter: alpha(opacity=70);      
}  
/* 悬浮菜单按钮 */
.menu-float{
  position:fixed;
  width:100rpx;
  height:100rpx;
  top:60rpx;
  left:40rpx;
  z-index: 100;
  border-radius: 50%;
  background:rgba(255,255,255,.8);
  box-shadow: 1px 1px 10px 1px #999999;
  display:flex;
  justify-content: center;
  align-items: center;
}
.menu-icon{
  width:50rpx;
}
