/* pages/login/login.wxss */
.main{
  background: linear-gradient(#021557, #0e8acd);
  background: -webkit-linear-gradient(#021557, #0e8acd);
  background: -moz-gradient(#021557, #0e8acd);
  background: -o-gradient(#021557, #0e8acd);
  display: flex;
  align-items:flex-start;
  justify-content:flex-start;
  position:fixed;
  overflow: hidden;
  padding:0;
  width:100%;
}
.cloud{
  width:100%;
}
.cloudimg{
  display:block;
}  
.middle{
  width:100%;
  box-sizing:border-box;
  padding:0 30rpx;
  margin:auto;
}

.binding{
    font-size:50rpx;
    padding:30rpx 0;
    letter-spacing:2rpx;
    color:#ffffff;
}
.frmboxNew {
     margin: 12px 0; 
    border-radius: 4px;
    overflow: hidden;
    position: relative;
    background-color: #fff;
    width:100%;
}
.frmbing{
   margin: 12px 0; 
    border-radius: 4px;
    overflow: hidden;
    width:100%;
    display:flex;
    flex-direction:column;
    align-items:center;
}
.frm-input{
  height: 48px;
  position: relative;
  clear: left;
  overflow: hidden;
  font-size:14px;
}
.frm-input:after{
  position: absolute;
    right: 0;
    bottom: 0;
    left: 15px;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #c8c7cc;
}
.frmtype{
  height: 48px;
  line-height: 21px;
  width: 100%;
  padding: 10px 15px;
  vertical-align: middle;
  background-color: transparent;
  box-sizing:border-box;
}
.frm-input:last-child:after{
  content:none;
}

button{
  border-radius:0;
}
button:after{
  content:none;
}

.btnBlock{
  font-size: 14px;
    line-height: 40px;
    padding: 0;
    height: 40px;
    border-radius: 4px;
    vertical-align: middle;
    width:100%;
}
.frmactive {
    color: #fff;
    background-color: rgba(0,124,185,1);
}
.weui-footer__text{
  color:#333333;
}
