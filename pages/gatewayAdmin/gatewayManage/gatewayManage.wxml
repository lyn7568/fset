<!--pages/gatewayAdmin/gatewayManage/gatewayManage.wxml-->
<import src="/template/tempList.wxml" />

<view class="search-bar">
  <view class="search-wrap">
    <icon type="search" size="16" class="icon-search" />
    <input type="text" placeholder="请输入节点地址" class="search-input" name="searchKeyword" confirm-type="search" value="{{searchKeyword}}" bindconfirm='keywordSearch' />
  </view>
</view>
<view class="containerr">
  <scroll-view class="navbar" scroll-x="{{true}}" scroll-left="{{scrollNavbarLeft}}">
    <view class="navbar-item {{ navbarArray[item].type }}" id="{{item}}" wx:for="{{array}}" wx:key="array" catchtap="onTapNavbar">
      <view class="navbar-item-wrap"> {{navbarArray[item].text}}</view>
    </view>
  </scroll-view>
</view>
<view class="search-result">
    <view class="table">
      <view class="tr bg-w">
        <view class="th">{{tableTh.one}}</view>
        <view class="th">{{tableTh.two}}</view>
      </view>
      <scroll-view scroll-y="true" bindscrolltolower="searchScrollLower" lower-threshold="50" class="scroll-tbody">
        <view class="touch-item {{item.isTouchMove ? 'touch-move-active' : ''}} {{index % 2 == 0 ? 'bg-g':'bg-w'}}" data-index="{{index}}" bindtouchstart="touchstart" bindtouchmove="touchmove" wx:for="{{listData}}" wx:key="">
          <view class="tr touch-content">
            <view class="td">{{item.cl01}}</view>
            <view class="td">{{item.cl02}}</view>
          </view>
          <view class="touch-btn">
            <navigator class="btn-item detail-btn" url="/pages/gatewayAdmin/gatewayDetail/gatewayDetail?id={{item.cl02}}">详情</navigator>
            <navigator class="btn-item manage-btn" url="/pages/gatewayAdmin/gatewayManage/gatewayManage?id={{item.cl02}}">节点</navigator>
          </view>
        </view>
        <template is="loadSty" data="{{isHideLoadMore:isHideLoadMore}}" />
      </scroll-view>
    </view>
</view>