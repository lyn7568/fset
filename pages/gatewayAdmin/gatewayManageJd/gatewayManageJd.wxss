/* 悬浮菜单按钮 */
.add-float{
  position:fixed;
  width:100rpx;
  height:100rpx;
  bottom:60rpx;
  right:40rpx;
  z-index: 100;
  border-radius: 50%;
  background:rgba(255,255,255,.8);
  box-shadow: 1px 1px 10px 1px #999999;
  display:flex;
  justify-content: center;
  align-items: center;
}
