/**app.wxss**/
@import "./lib/style/font.wxss";
@import 'weui.wxss';
page{
  background:#f4f6f8;
  height: 100%;
display: flex;
flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}


/* 加载 */
.loading{padding: 20rpx;text-align: center;font-size: 24rpx;color:#999;}
.loading image{width:30rpx;height:30rpx;margin-right:6rpx;position:relative;top:6rpx;}

.page__bd{
  overflow: hidden;
  background: #ffffff;
}
.weui-cells{
  font-size:36rpx; 
  line-height:80rpx;
  margin-top:0;
}
.weui-cells__title{
  display: block;
  margin-top:20rpx;
  line-height:80rpx;
}
.left-arrow{
  padding-right: 20rpx;
  position: relative;
}
.left-arrow:after{
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

/* input中placeholder-class */
.phcolor{
    color: #999;  
}
.weui-btn-area{
  margin-top:20rpx;
  overflow: hidden
}
.weui-btn-area button{
  margin: 24rpx 0;
}

.weui-form-preview__btn_primary {
 color:rgba(0,124,185,1);
}

.button-hover[type=primary] {
color:rgba(255, 255, 255, 0.6);
background-color:rgba(0,124,185,.8);
}
.button-hover {
color:rgba(0, 0, 0, 0.6);
background-color:#DEDEDE;

}
button[type=primary] {
color:#FFFFFF;
background-color:rgba(0,124,185,1);
}

.weui-picker__action{
  color:rgba(0,124,185,1)
}

/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}